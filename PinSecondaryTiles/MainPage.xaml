<Page x:Class="PinSecondaryTiles.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:PinSecondaryTiles"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="0,50,0,0" VerticalAlignment="Top">
            <Button Margin="20" Click="Button_Click">Pin Secondary Tile</Button>
            <TextBlock x:Name="Message" Margin="20" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Page>